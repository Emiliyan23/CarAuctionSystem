@model BidFormModel
@{
	ViewBag.Title = "Place Bid";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			@Html.HiddenFor(m=>m.AuctionId)
			<div class="form-group">
				<label asp-for="BidAmount"></label>
				<input asp-for="BidAmount" class="form-control" placeholder="Bid Amount...">
				<span asp-validation-for="BidAmount" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Place Bid"/>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}

