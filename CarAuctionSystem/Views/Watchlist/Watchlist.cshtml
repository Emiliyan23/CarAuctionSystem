@model IEnumerable<AuctionViewModel>
@{
	ViewBag.Title = "My watchlist";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="container" style="display:inline">
	<div class="row">
		<p style="font-size:25px">Auctions:</p>
		@if (!Model.Any())
		{
			<p>You are not watching any auctions</p>
		}
		else
		{
			<partial name="_AuctionCardPartial"/>
		}
	</div>
</div>
