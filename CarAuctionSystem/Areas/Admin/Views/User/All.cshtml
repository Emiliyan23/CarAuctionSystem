@model IEnumerable<UserServiceModel>
@{
	ViewBag.Title = "All Users";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
	<thead>
	<tr>
		<th><label>Username</label></th>
		<th><label>Email</label></th>
		<th><label>Active Auctions</label></th>
		<th><label>Pending Auctions</label></th>
		<th><label>Phone Number</label></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var user in Model)
	{
		<tr>
			<td>
				<label>
					<a asp-area="" asp-controller="User" asp-action="Profile"asp-route-id="@user.Id">@user.Username</a>
				</label>
			</td>
			<td>
				<label>@user.Email</label>
			</td>
			<td><label>@user.ActiveAuctionsCount</label></td>
			<td><label>@user.PendingAuctionsCount</label></td>
			<td>
				@if (user.PhoneNumber != string.Empty)
				{
					<label class="text-center">✔ @user.PhoneNumber</label>
				}
				else
				{
					<label class="text-center">❌</label>
				}
			</td>
		</tr>
	}
	</tbody>
</table>
